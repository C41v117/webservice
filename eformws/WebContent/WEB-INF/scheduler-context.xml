<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="systemParameterReloadJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.metamorf.eform.web.quartz.SystemParameterReloadJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="appParameterService" value-ref="appParameterService"/>
				<entry key="versionService" value-ref="versionService"/>
			</map>
			
		</property>
	</bean>

	<bean id="sendEmailJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.metamorf.eform.web.quartz.SendEmailJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="userService" value-ref="userService"/>
				<entry key="sendEmailService" value-ref="sendEmailService"/>
			</map>
			
		</property>
	</bean>
	
	<bean id="systemParameterReloadTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="systemParameterReloadJob" />
		<property name="cronExpression" value="0 0/5 * * * ?" />
	</bean>
	
	<bean id="sendEmailTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="sendEmailJob" />
		<property name="cronExpression" value="0 0/2 * * * ?" />
	</bean>
	
	<bean id="nonClusterScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="applicationContextSchedulerContextKey" value="applicationContext"/>
		<property name="jobDetails">
			<list>
				<ref bean="systemParameterReloadJob" />
				<ref bean="sendEmailJob" />
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="systemParameterReloadTrigger" />
				<ref bean="sendEmailTrigger" />
			</list>
		</property>
	</bean>
	
</beans>